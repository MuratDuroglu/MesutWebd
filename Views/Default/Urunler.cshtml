@model List<MesutWebd.Models.urunler>
@using MesutWebd.Controllers
@{
    ViewBag.Title = "Ürünler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{var tek = true;}
@foreach (var item in Model)
{


    <section class="page-section">
        <div class="container">
            <div class="product-item">
                <div class="product-item-title d-flex">
                    <div class="bg-faded p-5 d-flex @(tek?"ml-auto":"mr-auto") rounded">
                        <h2 class="section-heading mb-0">
                            <span class="section-heading-upper">@item.ustbaslik</span>
                            <span class="section-heading-lower">@item.baslik</span>
                        </h2>
                    </div>
                </div>
                <img class="product-item-img mx-auto d-flex rounded img-fluid mb-3 mb-lg-0" src="~/Content/img/@item.foto" alt="">
                <div class="product-item-description d-flex @(tek?"mr-auto":"ml-auto")">
                    <div class="bg-faded p-5 rounded">
                        <p class="mb-0">@item.icerik</p>@Html.ActionLink("Detay","UrunDetay",new {id=item.id,baslik=Seo.AdresDuzenle(item.baslik)},new {@class="btn btn-info" })
                    </div>
                </div>
            </div>
        </div>
    </section>
 tek = !tek;
}






