@model List<MesutWebd.Models.urunler>
@{
    ViewBag.Title = "Ürünler";
    Layout = "~/Areas/admin/Views/Shared/_Layoutadmin.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Ürünler Sayfası</h1>
                  
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                        <li class="breadcrumb-item active">Urunler</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-header">
                        @Html.ActionLink("Yeni Ürün ekle", "Yeniurunekle", null, new { @class = "btn btn-info mx-4" })
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Foto</th>
                                    <th>Üst Başlık</th>
                                    <th>Başlık</th>
                                    <th>İçerik</th>
                                    <th>Aktif</th>
                                    <th>Sıra</th>
                                    <th>Güncelle</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td><img src="~/Content/img/@item.foto" width="150" /> </td>
                                    <td>@item.ustbaslik</td>
                                    <td>@item.baslik</td>
                                    <td>
                                        @item.icerik
                                    </td>
                                    <td>
                                        @if (item.aktif == 1)
                                        {
                                            <i class="text-green fa-check">ok</i>
                                        }
                                        else
                                        { <i class="text-red fa-times">no</i>}
                                    </td>
                                    <td>@item.baslik</td>
                                    <td>@item.sira</td>
                                    <td>@Html.ActionLink("Güncelle", "Guncelle", new { item.id }, new {@class = "btn btn-info mx-4" })</td>
                                    <td>@Html.ActionLink("Sil", "Sil", new { item.id }, new {@class = "btn btn-danger mx-4" })</td>

                                </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Foto</th>
                                    <th>Üst Başlık</th>
                                    <th>Başlık</th>
                                    <th>İçerik</th>
                                    <th>Aktif</th>
                                    <th>Sıra</th>
                                    <th>Güncelle</th>
                                    <th>Sil</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

@section alttaraf
    {    <!-- DataTables -->
    <script src="~/Content/admin/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Content/admin/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Content/admin/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/Content/admin/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>


    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true,
                "autoWidth": false,
            });
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });</script>

}